/* pages/mine/mine.wxss */
view{
  padding: 0;
  margin: 0;
        }
.top_buttons{
  height: 70rpx;
  background-color:white;
  display: flex;
  
  justify-content: flex-end;
  margin-bottom: 35rpx;
}
.top_button{
  width: 70rpx;
  height:70rpx;
  margin-right:30rpx;
}
.button_image{
  width: 60rpx;
  height:60rpx
}
.profile{
  width: 100%;
  height: 200rpx;
 
  
  display: flex;
  margin-bottom: 30rpx;
  
}

.profile_photo{
  height: 200rpx;
  width: 200rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.profile_image{
  height: 200rpx;
  width: 200rpx;
  border-radius:100%;
}
.profile_text{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.user_nickname{
  
  font-size: larger  ;
}
.user_id{
  font-size: small;
}
.user_category{
  padding: 20rpx;
  display: flex;
  text-align: center;
  height: rpx;
  
}
.amount{
  font-weight: bolder;
}
.posts{
  font-size: x-small;
}

.blocks{
  width: 25%;
}

.user_content{
  padding-top:20rpx ;
  background-color: rgb(233, 233, 233);
  
}
.new_album{
  border-radius: 10rpx;
  margin: 20rpx;
  height: 100rpx;
  
  background-color: white;
  display: flex;
  
}
.left_new_album{
  display: flex;
  flex-direction: row;
  justify-items: right;
  width: 83%;
}
.new_album_text{
  padding-top: 25rpx;
  
  
  font-size: large;
  font-weight: 500;
}
.new_album image{
  margin: 20rpx;
    width: 60rpx;
    height: 60rpx;
}
.albums{
  width: 710rpx;
  margin: 20rpx;
  padding-top: 20rpx;
  
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;

  
  
}
.album{
  margin-bottom: 30rpx;
  width: 345rpx;
  height: 500rpx;
  border-radius: 10rpx;
  background-color:white;
  display: flex;
  flex-direction: column;
}
.thumbnail{
  
  display: flex;
  margin: 10rpx;
  width: 330;
  height: 330rpx;
  background-color:white;
}
.left_thumbnail_image{
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  height: 330rpx;
  width: 195rpx;
  margin-right: 10rpx;
}
.right_thumbnail{
  height: 330rpx;
  width: 120rpx;
  display: flex;
  flex-direction: column;
}

.thumbnail_top_right{
  height: 190rpx;
  margin-bottom: 10rpx;
}
.thumbnail_top_right_image{
  height: 198rpx;
  width: 120rpx;
  border-top-right-radius: 10rpx;
}

.thumbnail_bottom_right{
  height: 130rpx;
  width: 120rpx;
}
.thumbnail_bottom_right_image{
  height: 130rpx;
  width: 120rpx;
  border-bottom-right-radius: 10rpx;
}

.album_header{
  margin-left: 10rpx;
  background: white;
  width: 325rpx;
  height:70rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;

}
.header_text{
  font-weight: 550;
  font-size: 25rpx;
}
.album_manage{
  margin-left: 10rpx;
  background:white;
  width: 325rpx;
  height:70rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.pic_number{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.pic_number_text{
  font-size: 50rpx;
  font-weight: 500;
  color: rgb(180,180,180);
}
.edit{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.edit_text{
  color:rgb(160,160,160);
  font-size: 25rpx;
}
.ceshi{
  padding-top: 30rpx;
  margin-top: 30rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
  background-color: greenyellow;
}